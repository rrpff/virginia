{
  "name": "virginia",
  "scripts": {
    "typecheck": "run-p 'typecheck -w packages/core' 'typecheck -w apps/server' 'typecheck -w apps/web'",
    "build": "run-s 'build -w packages/core' 'build -w apps/server' 'build -w apps/web'",
    "dev": "run-p 'dev -w apps/server' 'dev -w apps/web' 'dev -w packages/core'",
    "start": "NODE_ENV=production node ./apps/server/dist/src/index.js",
    "migrate-dev": "npx -w apps/server prisma migrate dev",
    "compile": "npm run build && mkdir -p ./apps/server/dist/src/public && cp -R ./apps/web/dist/ ./apps/server/dist/src/public"
  },
  "workspaces": [
    "apps/server",
    "apps/tray",
    "apps/web",
    "packages/core",
    "packages/tsconfig"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
