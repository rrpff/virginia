{
  "name": "virginia",
  "bin": "./build/apps/server/src/index.js",
  "scripts": {
    "typecheck": "run-p 'typecheck -w packages/core' 'typecheck -w apps/server' 'typecheck -w apps/web'",
    "dev": "run-p 'dev -w apps/server' 'dev -w apps/web' 'dev -w packages/core'",
    "migrate-dev": "npx -w apps/server prisma migrate dev",
    "build": "run-p build:*",
    "build:sources": "run-p 'build -w apps/server' 'build -w apps/web' 'build -w packages/core'",
    "build:binary": "swc ./apps/server/src -d ./build -C module.type=commonjs",
    "package": "pkg .",
    "release": "run-s build package",
    "start": "NODE_ENV=production DATABASE_URL=file:$(pwd)/apps/server/prisma/dev.db ./binaries/virginia-arm64"
  },
  "workspaces": [
    "apps/server",
    "apps/tray",
    "apps/web",
    "packages/core",
    "packages/tsconfig"
  ],
  "devDependencies": {
    "@prisma/client": "^6.3.1",
    "@yao-pkg/pkg": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.3.1"
  },
  "pkg": {
    "assets": [
      "apps/web/dist/**/*",
      "node_modules/.prisma/**/*"
    ],
    "targets": [
      "node22-macos-arm64",
      "node22-macos-x64"
    ],
    "outputPath": "./binaries"
  }
}
