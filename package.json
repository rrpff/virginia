{
  "name": "virginia",
  "version": "0.1.0",
  "bin": "./build/apps/server/src/index.js",
  "scripts": {
    "postinstall": "npx -w apps/server prisma generate",
    "typecheck": "run-p 'typecheck -w apps/server' 'typecheck -w apps/web'",
    "dev": "run-p 'dev -w apps/server' 'dev -w apps/web' 'dev -w apps/desktop'",
    "migrate-prisma": "npx -w apps/server prisma migrate dev",
    "migrate-new": "npx -w apps/server tsx ../../node_modules/knex/bin/cli.js migrate:make -x ts",
    "build": "run-s 'build -w apps/server' 'build -w apps/web' 'build -w apps/desktop'",
    "package": "pkg --compress Brotli .",
    "release": "run-s build package",
    "make": "npm run make -w apps/desktop",
    "publish": "npm run publish -w apps/desktop",
    "start": "NODE_ENV=production ./binaries/virginia-arm64"
  },
  "workspaces": [
    "apps/desktop",
    "apps/server",
    "apps/web"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
