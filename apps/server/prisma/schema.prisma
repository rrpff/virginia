// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feed {
  id      String  @id @default(uuid())
  name    String?
  iconUrl String?

  sources    Source[]
  categories Category[]
}

model Source {
  id     String @id @default(uuid())
  feedId String
  url    String

  name    String?
  iconUrl String?

  feed  Feed   @relation(fields: [feedId], references: [id], onDelete: Cascade)
  items Item[]
}

model Item {
  id          String   @id @default(uuid())
  sourceId    String
  url         String
  title       String
  description String?
  imageUrl    String?
  timestamp   DateTime

  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)
}

model Category {
  id       String @id @default(uuid())
  name     String
  vanity   String
  icon     String
  position Int

  feeds Feed[]
}
