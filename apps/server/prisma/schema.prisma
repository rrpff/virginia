// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feed {
  id         String @id @default(uuid())
  url        String
  categories String @default("") // space separated

  name    String?
  iconUrl String?

  items FeedItem[]
}

model FeedItem {
  id          String   @id @default(uuid())
  feedId      String
  url         String
  title       String
  description String?
  imageUrl    String?
  timestamp   DateTime

  feed Feed @relation(fields: [feedId], references: [id])
}
